<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.administrator.zhihuibeijing.noscrollViewPager.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">


        <RadioButton
            android:id="@+id/rb_home"
            style="@style/Bottom_Tab_styles"
            android:drawableTop="@drawable/home_seletor"
            android:gravity="center"
            android:checked="true"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/Bottom_Tab_styles"
            android:drawableTop="@drawable/new_seletor"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/rb_marts"
            style="@style/Bottom_Tab_styles"
            android:drawableTop="@drawable/smart_seletor"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/rb_gov"
            style="@style/Bottom_Tab_styles"
            android:drawableTop="@drawable/tab_gov_seletor"
            android:text="财务" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/Bottom_Tab_styles"
            android:drawableTop="@drawable/tab_setiing_seletor"
            android:text="设置" />

    </RadioGroup>


</LinearLayout>
